@page
@model NIIAST.StudentViewModel
@{
    ViewData["Title"] = "StudentView";
}
@{ 
//var photoPath = "~/images/" + (item.StuPhotoPath == "Null" ? "noimage.jpg" : item.StuPhotoPath);
<div class="container">
    <div class="row">
        <div class="col-md-3" >

        </div>
        <div class="col-md-6" style="text-align: center ">
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;display: inline-block ">
                <div class="card-header text-center " style="background-color: #ffbb99; height: 80px">
                    <p>Name  : @Model.StudentInfo.StuFirstName</p>

                </div>
                <div class="card-body" style="        background-color: #ffeee6;
">
                    <p>Email Id     :@Model.StudentInfo.StuEmailId</p>
                    <p>Phone No   :@Model.StudentInfo.StuPhoneNo</p>
                    <p>Adhar No   :@Model.StudentInfo.StuAdharNo</p>
                    <p>Courses      :@Model.Course</p>
                    <p>Degree       :@Model.Degree</p>
                    <p>Total Fees       :@Model.TotalFeesDueAmount</p>
                    <p>Fees Paid       :@Model.TotalFeesPaid</p>
                    <p>Fees Due       :@Model.TotalFeesRemaining</p>

                </div>

                <div class="card-footer text-center" style="background-color: #ffbb99">
                    <a asp-page="/Students/Index"
                       class="btn btn-danger m-1 table-anchor table-anchor-line-height ">Back To List</a>

                </div>
            </div>

        </div>
        <div class="col-md-3" >

        </div>
    </div>
</div>

    }
