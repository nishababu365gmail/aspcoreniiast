@page
@model NIIAST.StudentsInfoModel
@{
    ViewData["Title"] = "StudentsInfo";
     var photoPath = "~/images/" + (Model.StudentInfo.StuPhotoPath ?? "noimage.jpg");
}

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-md-12"  >
                Top Roow
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"  >
                <input type="hidden" asp-for="@Model.StudentId" />
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuFirstName">First Name</label>
                            </div>
                            <div class="col-md-7">
                                <input type="text" asp-for="StudentInfo.StuFirstName" class="form-control" />
                                <span asp-validation-for="StudentInfo.StuFirstName"></span>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuLastName">Last Name</label>
                            </div>
                            <div class="col-md-7">
                                <input type="text" asp-for="StudentInfo.StuLastName" class="form-control" />
                                <span asp-validation-for="StudentInfo.StuLastName"></span>
                            </div>
                            <input type="hidden" asp-for="StudentInfo.StuPhotoPath"/>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuEmailId">Email Id</label>
                            </div>
                            <div class="col-md-7">
                                <input type="text" asp-for="StudentInfo.StuEmailId" class="form-control" />
                                <span asp-validation-for="StudentInfo.StuEmailId"></span>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuPhoneNo">Phone No</label>
                            </div>
                            <div class="col-md-7">
                                <input type="text" asp-for="StudentInfo.StuPhoneNo" class="form-control" />
                                <span asp-validation-for="StudentInfo.StuPhoneNo"></span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuRegistrationDate">Reg Date</label>
                            </div>
                            <div class="col-md-7">
                                <input type="date" asp-for="StudentInfo.StuRegistrationDate" class="form-control" />
                                <span asp-validation-for="StudentInfo.StuRegistrationDate"></span>
                            </div>

                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuAdharNo">Adhar No</label>
                            </div>
                            <div class="col-md-7">
                                <input type="text" asp-for="StudentInfo.StuAdharNo" class="form-control" />
                                <span asp-validation-for="StudentInfo.StuAdharNo"></span>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuNotes">Notes</label>
                            </div>
                            <div class="col-md-7">
                                <textarea asp-for="StudentInfo.StuNotes" rows="3" cols="10" class="form-control"></textarea>
                                <span asp-validation-for="StudentInfo.StuNotes"></span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuDegrees">Degree</label>
                            </div>
                            <div class="col-md-7">

                                <select asp-for="@Model.StuDegrees" asp-items="Model.DegreeList" class="multiple-checkboxes" multiple="multiple">
                                </select>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label for="StuCourse">Courses</label>
                            </div>
                            <div class="col-md-7">

                                <select asp-for="@Model.StuCourse" asp-items="Model.CourseList" class="multiple-checkboxes" multiple="multiple">
                                </select>
                            </div>
                            <div class="col-md-7">

                                <select asp-for="@Model.StuCourse" asp-items="Model.CourseList" class="multiple-checkboxes" multiple="multiple">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            @*Photo property type is IFormFile, so ASP.NET Core
                    automatically creates a FileUpload control  *@
                            <input asp-for="Photo" class="custom-file-input form-control">
                            <label class="custom-file-label">Click here to change photo</label>
                        </div>
                    </div>
                </div>

                @*Display the existing employee photo*@
                <div class="form-group row col-sm-4 offset-4">
                    <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
                </div>

        
                <div class="row">
                    <div class="col-md-3"><label for="StuDegrees">Placement Required</label></div>
                    <div class="col-md-3"><input type="checkbox" asp-for="StudentInfo.IsPlacementRequired" style="width:20px;height:20px;" /></div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label for="StuDegrees">Is working</label>
                    </div>
                    <div class="col-md-3">
                        <input type="checkbox" asp-for="StudentInfo.IsWorking" style="width:20px;height:20px; " />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="col-md-4" style="text-align:center">
                        <input class="btn btn-danger" type="submit" value="Save Student" style="padding-left:20px;display:inline-block" id="btnSaveStudent" />


                    </div>
                </div>
            </div>
        
    </div>
    </div>
</form>

